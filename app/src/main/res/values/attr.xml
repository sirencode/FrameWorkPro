<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DropdownLayout">
        <attr name="dropSpeed" format="integer"/>
    </declare-styleable>

    <declare-styleable name="DrawableTextView">
        <attr name="leftDrawable" format="reference|color"/>
        <attr name="rightDrawable" format="reference|color"/>
        <attr name="topDrawable" format="reference|color"/>
        <attr name="bottomDrawable" format="reference|color"/>

        <attr name="leftDrawableWidth" format="reference|dimension"/>
        <attr name="rightDrawableWidth" format="reference|dimension"/>
        <attr name="topDrawableWidth" format="reference|dimension"/>
        <attr name="bottomDrawableWidth" format="reference|dimension"/>

        <attr name="leftDrawableHeight" format="reference|dimension"/>
        <attr name="rightDrawableHeight" format="reference|dimension"/>
        <attr name="topDrawableHeight" format="reference|dimension"/>
        <attr name="bottomDrawableHeight" format="reference|dimension"/>
    </declare-styleable>

    <declare-styleable name="SquareLayout">
        <attr name="hwRate" format="float" />
        <attr name="widthFixed" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ShapeView">
        <attr name="baseSolidColor" format="reference|color" />
        <attr name="baseCorner" format="reference|dimension" />
        <attr name="baseStrokeColor" format="reference|color" />
        <attr name="baseStrokeWidth" format="reference|dimension" />
        <attr name="baseStrokeDashWidth" format="reference|dimension" />
        <attr name="baseStrokeDashGap" format="reference|dimension" />
        <attr name="baseGradientStartColor" format="reference|color" />
        <attr name="baseGradientEndColor" format="reference|color" />
        <attr name="baseGradientOrientation">
            <enum name="top_bottom" value="0" />
            <enum name="tr_bl" value="1" />
            <enum name="right_left" value="2" />
            <enum name="br_tl" value="3" />
            <enum name="bottom_top" value="4" />
            <enum name="bl_tr" value="5" />
            <enum name="left_right" value="6" />
            <enum name="tl_br" value="7" />
        </attr>
    </declare-styleable>

</resources>